@model TSheet.Models.ResetPasswordModel

@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";

}
<link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />


<style>
    #resetPassSuperAdminbtn {
        height: 32px;
        font-size: 15px;
        background-color: #133E6C
    }
</style>

<div class="pl-1 ml-5">
    <button class="btn bg-success">
        @Html.ActionLink("Go To Dashboard", "DashBoard", "SuperAdmin", new { @class = "text-white h4", @id = "SideBar-items" })
    </button>
</div>
<h3 class="pl-3 ml-5 pt-3 font-weight-bold " id="Adminhedding">Reset Password </h3>
<div class="pt-3 pl-5">

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <strong>
                Success!
            </strong>@ViewBag.Message
        </div>
    }

    @using (Html.BeginForm("ResetPassword", "SuperAdmin", FormMethod.Post))
    {

        <div class="form-group ">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label h3" })

            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control w-25" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-sm h3" })

            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control w-25" } })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

        </div>


        <div class="pt-4 ">
            <input type="submit" value="Save" class="btn btn-default btn-primary w-25" id="resetPassSuperAdminbtn"/>
        </div>

    }

</div>

