
@{
    ViewBag.Title = "CreateUser";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">


    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <link href="~/Content/registration.css" rel="stylesheet" />


</head>

<body>

    <div class="container-fluid ">
        @Html.Partial("_navbar")
        <div class="row">
                @Html.Partial("_sidebar")
                
                    <div class="col-lg-8">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label>First Name</label>
                                        <input type="text" class="form-control form-control-user" id="exampleUserNAme">
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control form-control-user" id="exampleFullName">
                                    </div>
                                </div>
                                <div class="form-group row pt-2">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label>Email</label>
                                        <input type="text" class="form-control form-control-user" id="exampleEmail">
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Mobile No.</label>
                                        <input type="text" class="form-control form-control-user" id="exampleMobile">
                                    </div>
                                </div>
                                <div class="form-group row pt-2">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label>Gender</label>
                                        <input type="text" class="form-control form-control-user" id="exampleGender">
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Date of Birth</label>
                                        <input type="date" class="form-control form-control-user" id="exampleBOD">
                                    </div>
                                </div>
                                <div class="form-group row pt-2">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label>Joining Date</label>
                                        <input type="date" class="form-control form-control-user" id="exampleJoiningDate">
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Date Of Leaving</label>
                                        <input type="date" class="form-control form-control-user" id="exampleLeving">
                                    </div>
                                </div>

                                <div class="form-group row pt-2 ">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label>Create By</label>
                                        <input type="text" class="form-control form-control-user" id="exampleJoiningDate">
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Role</label>
                                        <select class="form-select" aria-label="Default select example">
                                            <option selected>Select Role</option>
                                            <option value="1">Admin</option>
                                            <option value="2">User</option>

                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row pt-2">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label>Password</label>
                                        <input type="password" class="form-control form-control-user" id="exampleJoiningDate">
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Confirm Password</label>
                                        <input type="password" class="form-control form-control-user" id="exampleLeving">
                                    </div>
                                </div>

                                <div class="row pt-4">
                                    <div class="form-group  pt-3col-sm">
                                        <input type="submit" value="Register Account" class="btn bg-primary w-100">
                                    </div>
                                </div>

                                <hr />
                            </form>

                            <!-- <div class="text-center">
                                <a class="small" href="login.html">Already have an account? Login!</a>
                            </div> -->
                        </div>
                    </div>
                </div>
            </div>
    </div>
        @*</div>

    </div>*@

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

</body>

</html>

