
@model TSheet.Models.RegistrationModel
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<link href="~/Content/css/TSheetCSS/css/Admin.css" rel="stylesheet" />
<link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />

<link href="~/Content/css/TSheetCSS/css/AllAdmin.css" rel="stylesheet" />
<style>
    body {
        
        height: 110px;
        overflow: scroll;
    }
</style>
<body id="adminBody">
    <h4 class="text-center createUserHedding h1 AdminTitle">Create an Account</h4>

    <div class="pt-3 container">
        <div class="container-fluid ">

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    <strong>
                        Success!
                    </strong>@ViewBag.Message
                </div>
                @Html.ActionLink("Go Back", "CreateUser", "Admin")
            }


            else
            {

                using (Html.BeginForm("CreateUser", "SuperAdmin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    {
        <div class="form-horizontal ">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-6 boxint">
                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label h3 " })
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @id = "createUserInt" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-6 boxint ">
                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label h3" })
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @id = "createUserInt" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 boxint">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label h3 " })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control ", @id = "createUserInt" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-6 boxint ">
                    @Html.LabelFor(model => model.MobileNumber, htmlAttributes: new { @class = "control-label h3" })
                    @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control", @id = "createUserInt" } })
                    @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 boxint">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label h3" })
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control ", @id = "createUserInt" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-6 boxint ">
                    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label h3 " })
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @id = "createUserInt" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(model => model.CreatedBy, new { @Value = HttpContext.Current.User.Identity.Name })
            <div class="row">
                <div class="col-lg-6 boxint">
                    @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "control-label h3" })
                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @id = "createUserInt" } })
                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-6 boxint ">
                    @Html.LabelFor(model => model.DateOfJoining, htmlAttributes: new { @class = "control-label h3" })
                    @Html.EditorFor(model => model.DateOfJoining, new { htmlAttributes = new { @class = "form-control ", @id = "createUserInt" } })
                    @Html.ValidationMessageFor(model => model.DateOfJoining, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 boxint">
                    <div class="row pl-2">
                        <div class="control-label ">@Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label h3 " })</div>

                        <div class="control-label pl-5 pt-5"> @Html.RadioButtonFor(model => model.Gender, "Male", new { @class = "h3" }) <span>Male</span> </div>

                        <div class="control-label pl-3 pt-5">@Html.RadioButtonFor(model => model.Gender, "Female", new { @class = "h3" }) <span>Female</span></div>
                    </div>
                </div>
            </div>

            <div class="pt-5 ">
                <input type="submit" value="Create" class="btn btn-default btn-block btn-dark rounded w-25 mr-2" id="btn-submit" />
            </div>
        </div>
                    }
                    if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger">
                            <strong>
                                Error!
                            </strong>@ViewBag.Message
                        </div>
                    }


                }
            }
        </div>
    </div>

</body>