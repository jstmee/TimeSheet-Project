@model TSheet.Models.ProjectsModel
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";

}
<link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    .btn {
        width: 180px;
    }
</style>
<div class="mt-3">
    <button class="btn bg-success  ml-3" type="submit">
        @Html.ActionLink("Go To Back", "ProjectList", "SuperAdmin", "SuperAdmin", new { @class = "text-white h4", @id = "SideBar-items" })
    </button>
</div>
<div class="ml-5">
    <h3 class="font-weight-bold pt-3 pl-3">Add Projects</h3>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <strong>
                @ViewBag.Message
            </strong>
        </div>
    }
    else
    {
        using (Html.BeginForm("AddProjects", "SuperAdmin", FormMethod.Post))
        {

            <div class="form-horizontal">
                <div class="form-group pt-4">
                    @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label h4" })

                    @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control w-25" } })
                    @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <div>
                        @Html.LabelFor(model => model.ProjectDescription, htmlAttributes: new { @class = "control-label h4" })
                    </div>
                    @Html.TextAreaFor(model => model.ProjectDescription, new { @class = "whatever-class w-25", @cols = 50, @rows = 7 })

                    @Html.ValidationMessageFor(model => model.ProjectDescription, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group pt-5">
                <div class="">
                    <input type="submit" value="Save" class="btn btn-default btn-primary w-25" />
                </div>
            </div>
            @* </div>*@
        }
    }

</div>

