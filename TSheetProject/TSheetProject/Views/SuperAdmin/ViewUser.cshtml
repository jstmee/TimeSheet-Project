
@model TSheet.Data.Registration
@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}
<link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
<style>
    .center {
        margin: auto;
        width: 30%;
        border: 1px solid ;
        padding: 10px;
    }
    .hedding{
        color: black;
        font-family:'Times New Roman', Times, serif;
        font-size:20px;
    }
    
</style>

<div class="mt-3 pt-4 pl-4 ml-2">
    <button class="btn bg-success">
        @Html.ActionLink("Go To Back", "AssignRoles", "SuperAdmin", "", new { @class = "text-white", @id = "SideBar-items" })
    </button>
</div>
<div class="center container">
    <h3 class="text-dark text-center" style="font-weight:700;">User's Info</h3>

    <dl class="dl-horizontal">
        

        <div class="pl-5">
            <div class="hedding"> Name: </div>  @Html.DisplayFor(model => model.FirstName)  @Html.DisplayFor(model => model.LastName)
        </div>

       
        <div class="pl-5">
            <div  class="hedding"> @Html.DisplayNameFor(model => model.Email) : </div>@Html.DisplayFor(model => model.Email)
        </div>
       

        <div class="pl-5">
            <div class="hedding">@Html.DisplayNameFor(model => model.DateOfJoining) :</div> @Convert.ToDateTime(Model.DateOfJoining).ToString("dd/MM/yyyy")
            @* @Html.DisplayFor(model => model.DateOfJoining)*@
        </div>
     

        <div  class="pl-5">
            <div class="hedding"> @Html.DisplayNameFor(model => model.Gender) :</div>@Html.DisplayFor(model => model.Gender)
        </div>
       

        <div  class="pl-5">
            <div class="hedding"> @Html.DisplayNameFor(model => model.DateOfbirth) </div>  @Convert.ToDateTime(Model.DateOfbirth).ToString("dd/MM/yyyy")
        </div>

    </dl>
</div>

