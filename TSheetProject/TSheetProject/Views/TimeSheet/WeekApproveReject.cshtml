@model List<TSheet.Models.WeekInfoModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
<style>
    #backbutton {
        float: left;
        width:180px;

    }
</style>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<div class="">


    <link rel="stylesheet"
          type="text/css"
          href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css" />
    <table id="table_id" class="table-bordered">
        <thead class="bg-dark text-white p-3">
            <tr class="p-3">
                <th scope="col" class="p-3">Date</th>
                <th scope="col">Hours</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
                @*<th scope="col">Details</th>
                    <th scope="col">Delete</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="bg-white">
                    <td class="bg-white p-3">@Html.DisplayFor(modelItem => item.Date)</td>
                    <td class="bg-white p-3">@Html.DisplayFor(modelItem => item.Hours)</td>
                    <td class="bg-white p-3">@Html.DisplayFor(modelItem => item.Status)</td>
                    <td class="bg-white p-3">
                        @Html.ActionLink("Approve", "ApproveDay", new { id = item.Id }, null) |
                        @Html.ActionLink("Reject", "Reject", new { masterid = item.Id }, null)

                    </td>
                </tr>
            }

        </tbody>
    </table>

    <script type="text/javascript"
            charset="utf8"
            src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
    <script type="text/javascript"
            charset="utf8"
            src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
    <script>
        $(function () {
            $("#table_id").dataTable();
        });
    </script>
</div>
<div>
    <button id="backbutton" class="btn bg-success ml-4">@Html.ActionLink("Back", "WeeklyStatus", "TimeSheet", "TimeSheet", new { @class = "text-white", @id = "SideBar-items" })</button>

</div>