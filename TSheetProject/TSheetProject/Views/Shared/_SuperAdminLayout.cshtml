<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/css/TSheetCSS/SuperAdminLayout.css" rel="stylesheet" />
</head>
<body>

    <div id="mySidenav" class="sidenav">

        <h3 class=" sideBarTitle text-center">Time Sheet</h3>
        <div class="sideBarItems ">
            <span> @Html.ActionLink("Dashboard ", "DashBoard", "SuperAdmin", "SuperAdmin", new { @class = "text-white", @id = "SideBar-items" })</span>

            <h5 class=""> @Html.ActionLink("Create User", "CreateUser", "SuperAdmin", "SuperAdmin", new { @class = "text-white", @id = "SideBar-items" })</h5>

            <h5 class="">  @Html.ActionLink("All Time Sheet", "AllTimeSheetSuperAdmin", "TimeSheet", "TimeSheet", new { @class = "text-white", @id = "SideBar-items" })</h5>


            @*<h5 class="">  @Html.ActionLink("User Approve/Reject", "WeeklyStatusSuperAdmin", "TimeSheet", "TimeSheet", new { @class = "text-white", @id = "SideBar-items" })</h5>*@

            <h5 class=""> @Html.ActionLink("See All Users", "AssignRoles", "SuperAdmin", "SuperAdmin", new { @class = "text-white", @id = "SideBar-items" })</h5>

            <h5 class="">@Html.ActionLink("Project List", "ProjectList", "SuperAdmin", "superAdmin", new { @class = "text-white", @id = "SideBar-items" })</h5>
            <h5 class="">@Html.ActionLink("Project Assigned", "ProjectsAssigned", "SuperAdmin", "superAdmin", new { @class = "text-white", @id = "SideBar-items" })</h5>

            <h5 class=""> @Html.ActionLink("Reset Password", "ResetPassword", "SuperAdmin", "SuperAdmin", new { @class = "text-white", @id = "SideBar-items" })</h5>

        </div>
    </div>

    <div id="main">
        <div class="shadow-sm p-3">
            <nav class="navbar navbar-inverse">
                <div class="">
                    <ul class="nav navbar-nav navbar-right ">
                        <li>@HttpContext.Current.User.Identity.Name</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    </ul>
                </div>
            </nav>
            <a href="javascript:void(0)" class="closebtn pl-2 h1 pt-2" onclick="closeNav()" onclick="openNav()">	&#9666;</a>
            <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; </span>
        </div>



        @RenderBody()

    </div>

    <script>
        $(document)
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
            document.body.style.backgroundColor = "rgba(0,0,0,0.)";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            document.body.style.backgroundColor = "white";
        }
    </script>

</body>
</html>







