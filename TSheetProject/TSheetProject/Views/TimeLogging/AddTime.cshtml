@model List<TSheet.Models.AddTimeSheetModel>
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_UserLayoutPage1.cshtml";
}
<link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />


<link href="~/Content/css/Addtime.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<style>
    #weekCounts {
        font-size: 25px;
        font-family: 'Times New Roman', Times, serif;
        font-weight: 700;
        color: #097DCD;
        padding-left: 10px;
    }
    .MonthYear{
        font-size:25px;
        color:forestgreen;
        font-weight:600;
    }
    #weekValue {
        font-size: 25px;
        color: forestgreen;
        font-weight: 600;
        
    }
    #date_id-input {
        width: 200px;
        height: 30px;
        font-size: 16px;
    }
</style>

<script>
    $(document).ready(function () {
        // Hide 
        $("#date_id").hide();

        // Show 
        $("#weekValue").click(function () {
            $("#date_id").show().slideDown();
        });
    });
</script>
>

<div class="pt-3">
    
    @using (Html.BeginForm("TimeLog", "TimeLogging", FormMethod.Post))
    {
        <div class="p-3">
            <div class="">
                <div class="MonthYear ">@ViewBag.monthName - @ViewBag.year</div>
                <div class=""><input type="week" id="date_id" name="userweek" required class="weekdata" onchange="this.form.submit()" /></div>
                <div id="weekValue" class="">Week - @ViewBag.UserWeek  </div>
                <div>First Date Of Week - @ViewBag.FirstDayOfWeek</div>
                @*<div>Last Date Of Week - @ViewBag.LastDateOfWeek</div>*@
            </div>

        </div>
    }

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <strong>
            </strong>@ViewBag.Message
        </div>
        @Html.ActionLink("Go Back", "TimeLog", "TimeLogging")
    }

    else
    {
        using (Html.BeginForm("AddTime", "TimeLogging", FormMethod.Post))

        {
            <input type="submit" value="Save Details" id="AddTimeBtn" class="btn  text-white  p-2">

            if (Model != null)
            {
                for (var i = 0; i < Model.Count; i++)
                {
                    <table class="table  pt-3">
                        <tr>
                            <td>
                                @if (i == 0)
                                {
                                    <b>
                                        Project
                                        <br />
                                    </b>
                                    <br />
                                    <br />
                                }
                                @Html.HiddenFor(m => Model[i].ProjectId)
                                @Html.DisplayFor(m => Model[i].ProjectName, new { @class = "form-control" })

                            </td>
                            <td>
                                @if (i == 0)
                                {
                                    <b>
                                        Monday
                                        <br />@ViewBag.userDates[0].ToShortDateString()
                                    </b>
                                    <br /><br />
                                }

                                @Html.EditorFor(m => Model[i].MondayLogTime, "", new { htmlAttributes = new { @class = "Input-Entry border-white" } })
                                @Html.HiddenFor(m => Model[i].MondayLogTimeId)
                            </td>
                            <td>
                                @if (i == 0)
                                {
                                    <b>Tuesday <br />@ViewBag.userDates[1].ToShortDateString()</b>
                                    <br /><br />
                                }
                                @Html.EditorFor(m => Model[i].TuesdayLogTime, "", new { htmlAttributes = new { @class = "Input-Entry border-white " } })
                                @Html.HiddenFor(m => Model[i].TuesdayLogTimeId)
                            </td>
                            <td>
                                @if (i == 0)
                                {
                                    <b>Wednesday <br />@ViewBag.userDates[2].ToShortDateString()</b>
                                    <br /><br />
                                }
                                @Html.EditorFor(m => Model[i].WednesdayLogTime, "", new { htmlAttributes = new { @class = "Input-Entry border-white" } })
                                @Html.HiddenFor(m => Model[i].WednesdayLogTimeId)
                            </td>
                            <td>
                                @if (i == 0)
                                {
                                    <b>Thursday <br />@ViewBag.userDates[3].ToShortDateString()</b>
                                    <br /><br />
                                }
                                @Html.EditorFor(m => Model[i].ThursdayLogTime, "", new { htmlAttributes = new { @class = "Input-Entry border-white" } })
                                @Html.HiddenFor(m => Model[i].ThursdayLogTimeId)
                            </td>
                            <td>
                                @if (i == 0)
                                {
                                    <b>Friday <br />@ViewBag.userDates[4].ToShortDateString()</b>
                                    <br /><br />
                                }
                                @Html.EditorFor(m => Model[i].FridayLogTime, "", new { htmlAttributes = new { @class = "Input-Entry border-white" } })
                                @Html.HiddenFor(m => Model[i].FridayLogTimeId)
                            </td>
                            <td>
                                @if (i == 0)
                                {
                                    <b>Saturday <br />@ViewBag.userDates[5].ToShortDateString()</b>
                                    <br /><br />
                                }
                                @Html.EditorFor(m => Model[i].SaturdayLogTime, "", new { htmlAttributes = new { @class = "Input-Entry border-white" } })
                                @Html.HiddenFor(m => Model[i].SaturdayLogTimeId)
                            </td>
                            <td>
                                @if (i == 0)
                                {
                                    <b>Sunday <br />@ViewBag.userDates[6].ToShortDateString()</b>
                                    <br /><br />
                                }
                                @Html.EditorFor(m => Model[i].SundayLogTime, "", new { htmlAttributes = new { @class = "Input-Entry border-white" } })
                                @Html.HiddenFor(m => Model[i].SundayLogTimeId)
                            </td>
                            <td>
                                @* <b>Description</b> @Html.EditorFor(m => Model[i].Description, "", new { htmlAttributes = new { @class = "Input-Entry-discription" } })*@
                                @if (i == 0)
                                {
                                    <b>Description<br /></b>
                                    <br /><br />
                                }
                                @Html.EditorFor(m => Model[i].Description, "", new { htmlAttributes = new { @class = "Input-Entry border-white w-75" } })
                                @Html.HiddenFor(m => Model[i].DescriptionId)
                            </td>

                        </tr>
                    </table>

                }
            }

        }




    }
</div>