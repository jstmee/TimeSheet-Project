
@{
    ViewBag.Title = "TotalTimeSheets1";
    Layout = "~/Views/Shared/_UserLayoutPage1.cshtml";
}

<h2>TotalTimeSheets1</h2>

<div style="width:90%; margin:0 auto;">
    <table id="myTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th class="bg-danger">FromDate</th>
                <th>ToDate</th>
                <th>TotalHours</th>
                <th>projectName</th>
                <th>Comment</th>
                <th>TimeSheetStatus</th>
            </tr>




        </thead>
        
    </table>
</div>
@*<link href="~/Content/Scripts/dataTablesScripts/dataTables.bootstrap.min.css" rel="stylesheet" />*@
<link href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />
@*<link href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />*@
@*<script src="~/Content/Scripts/dataTablesScripts/jquery.dataTables.min.js"></script>*@
@* Load datatable css *@

@section Scripts{
    @* Load DataTable js here *@
    @*<script src="~/Content/Scripts/dataTablesScripts/jquery.dataTables.min.js"></script>*@
    <script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {

            $("#myTable").DataTable({

                "ajax": {
                    "url": "/TotalCounts/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "FromDate", "name": "FromDate" },
                    { "data": "ToDate", "name": "ToDate" },
                    { "data": "TotalHours", "name": "TotalHours" },
                    { "data": "projectName", "name": "projectName" },
                    { "data": "Comment", "name": "Comment" },
                    { "data": "TimeSheetStatus", "name": "TimeSheetStatus" }


                ],
                "serverSide": "true",
                "order": [0, "asc"]
            });
        });
    </script>
}


