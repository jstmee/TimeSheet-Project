@model IEnumerable<TSheet.Data.TimeSheetDetail>

@{
    Layout = "~/Views/Shared/_UserLayoutPage1.cshtml";

}
<link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<style>
    .body-tts {
        background-color: #F1EFEE
    }
    .TotalTimeSheetTitle {
        font-size: 22px;
        font-weight: 600;
        font-family: 'Times New Roman', Times, serif;
        color: #115C8C
    }
</style>
<link rel="stylesheet"
      type="text/css"
      href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css" />
<link href="~/Content/css/user.css" rel="stylesheet" />
<body class="body-tts">
    <div class="TotalTimeSheetTitle pl-3">
        Total Time-Sheet
    </div>
    <div class="pt-2 pl-4 pr-4">
        <table id="table_id" class="table-bordered shadow-sm">
            <thead class="bg-dark text-white">

                <tr>
                    <th class="p-3">
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th class="p-3">
                        Project
                    </th>
                    <th class="p-3">
                        @Html.DisplayNameFor(model => model.Hours)
                    </th>
                    <th class="p-3">
                        @Html.DisplayNameFor(model => model.TimeSheetMaster.Comment)
                    </th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr class="bg-white">
                        <td class="bg-white p-3">


                            @{
                                var formattedDate = String.Format("{0:d}", item.Date);
                            }
                            @Html.DisplayFor(modelItem => formattedDate)
                        </td>
                        <td class="bg-white p-3">
                            @Html.DisplayFor(modelItem => item.TimeSheetMaster.ProjectMaster.ProjectName)
                        </td>
                        <td class="bg-white p-3">
                            @Html.DisplayFor(modelItem => item.Hours)
                        </td>
                        <td class="bg-white p-3">
                            @Html.DisplayFor(modelItem => item.TimeSheetMaster.Comment)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
<script type="text/javascript"
        charset="utf8"
        src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
<script type="text/javascript"
        charset="utf8"
        src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
<script>
    $(function () {
        $("#table_id").dataTable();
    });
</script>
