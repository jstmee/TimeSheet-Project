@model IEnumerable<TSheet.Data.TimeSheetAuditTB>

@{
    Layout = "~/Views/Shared/_UserLayoutPage1.cshtml";
}
<link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<link rel="stylesheet"
      type="text/css"
      href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css" />
<style>
    table{
        width:1240px;
    }
</style>
<div class="pt-5 ml-4 pl-3">
    <button class="btn bg-success">@Html.ActionLink("Go To Dashboard", "DashBoard", "User", "User", new { @class = "text-white", @id = "SideBar-items" })</button>
</div>
<div class="pt-2 pl-4 ml-3 pr-2">
    <table id="table_id" class="table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th class="p-3">
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApprovedBy)
                </th>
                <th>Date</th>
                <th>Hours Filled</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="bg-white">
                    <td class="bg-white p-3">
                        @Html.DisplayFor(modelItem => item.Registration.FirstName)
                        @Html.DisplayFor(modelItem => item.Registration.LastName)
                    </td>
                    <td class="bg-white p-3">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td class="bg-white p-3">
                        @Html.DisplayFor(modelItem => item.ApprovedBy)
                    </td>
                    <td class="bg-white p-3">@Html.DisplayFor(modelItem => item.TimeSheetDetail.Date)</td>
                    <td class="bg-white p-3">@Html.DisplayFor(modelItem => item.TimeSheetDetail.Hours)</td>

                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript"
        charset="utf8"
        src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
<script type="text/javascript"
        charset="utf8"
        src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
<script>
    $(function () {
        $("#table_id").dataTable();
    });
</script>
