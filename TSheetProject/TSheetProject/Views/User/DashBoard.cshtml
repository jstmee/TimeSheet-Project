        </div>
    </div>

    <div class="col-lg-3 col-md-6 ">
        <div class="card border-left-dark shadow-sm p-3  py-2">
            <div class="card-body">
                <div class=" row">
                    <div class="col-lg-8" id="text-cart">
                        <button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("TotalRejected", "TotalCounts")'">
                            Total Rejected
                        </button>
                    </div>
                    <div class=" col-lg-4"> <h4 class="count pt-3 pl-4 text-primary">@ViewBag.Rejected</h4></div>
                </div>
            </div>
        </div>
    </div>

</div>





