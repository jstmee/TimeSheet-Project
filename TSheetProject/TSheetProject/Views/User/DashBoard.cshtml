
@model TSheet.Models.RegistrationModel


@{
    ViewBag.Title = "User DashBoard";
    Layout = "~/Views/Shared/_UserLayoutPage1.cshtml";
}
<link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
<link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<link href="~/Content/css/TSheetCSS/UserDashboard.css" rel="stylesheet" />
 
<h4 id="UserDashboar" class="p-3 mt-2">User Dashboard</h4>

<div class="row p-3">
    <div class="col-lg-3 col-md-6 ">
        <div class="card border-left-dark   shadow-sm p-3  py-2">
            <div class="card-body id=" user-Card"">
                <div class=" row">
                    <div class="col-lg-8" id="text-cart">
                        <button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("TotalTimeSheet", "TotalCounts")'">
                             Time  Sheets
                        </button>

                    </div>
                    <div class=" col-lg-4"> <h4 class="count pt-3 pl-4 text-primary">@ViewBag.TotalsheetUser</h4></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3  col-md-6 ">
        <div class="card border-left-dark shadow-sm p-3  py-2">
            <div class="card-body">
                <div class=" row">
                    <div class="col-lg-8" id="text-cart">
                        <button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("TotalApproved", "TotalCounts")'">
